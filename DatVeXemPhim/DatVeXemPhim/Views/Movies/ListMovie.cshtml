@model IEnumerable<DatVeXemPhim.Models.Movie>

@{
    ViewBag.Title = "ListMovie";
    Layout = "~/Views/Shared/_LayoutHomePage.cshtml";
      <!-- Bootstrap Core CSS -->
    <link href="~/Content/Movie/bootstrap.min.css" rel="stylesheet">


}

<h2>DANH SÁCH PHIM</h2>

<div class="row">
    <div class="col-md-12">
         @foreach (var item in Model)
         {
            <div class="col-sm-3 col-lg-3 col-md-3">
                <div class="thumbnail">
                    @if (item.Files.Count > 0)
                    {
                        <img src="~/File?id=@item.Files.First().FileId " alt="picture"/>
                    }
                    else
                    {
                        <img src="http://placehold.it/320x150" alt="">
                    }
                    <div class="caption">
                        <h4 class="pull-right">@Html.DisplayFor(modelItem => item.ReleaseDate)</h4>
                        <h4>
                           @if (@item.TrailerURL != null)
                           {
                                <a href=@item.TrailerURL>@item.Title</a>
                           }
                           else
                           {
                                <a href="#">@item.Title</a>
                           }
                        </h4>
                        <p>@item.Genre</p>
                        <p><a target="_blank" href="../Movies/Details/@item.ID">See more...</a></p>
                    </div>
                    <div class="ratings">
                        <p class="pull-right">@item.Length</p>
                        <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                        </p>
                    </div>
                </div>
            </div>
         }
    </div>
</div>